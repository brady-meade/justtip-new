@{
    ViewBag.Title = "Assign Shift";
}
<h2>Assign Shift</h2>
@if (!string.IsNullOrEmpty(ViewBag.Message))
{
    <p style="color:green;">@ViewBag.Message</p>
}
@if (!string.IsNullOrEmpty(ViewBag.Error))
{
    <p style="color:red;">@ViewBag.Error</p>
}
<form method="post" action='@Url.Action("AssignShift", "Business", new { id = ViewBag.BusinessId })'>
    <label for="employeeName">Employee:</label>
    @Html.DropDownList("employeeName", (IEnumerable<SelectListItem>)ViewBag.employeeName, "Select an Employee", new { id = "employeeName" })
    <br />
    <label for="shiftDate">Shift Date:</label>
    <input type="date" id="shiftDate" name="shiftDate" required />
    <br />
    <button type="submit">Assign Shift</button>
</form>